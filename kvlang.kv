#:set cor_texto .57, .57, .57, 1
#:set cor_fundo .92, .92, .92, 1
#:set cor_borda .80, .80, .80, 1
#:set cor_botao .65, .65, .65, 1
#:set cor_botao_azul .23, .41, .78, 1
#:set cor_botao_laranja .93, .52, .31, 1


<BotaoEdicao@Button>:
	nome_imagem: ''
	background_down: ''
	background_normal: ''
	background_color: cor_botao
	on_press: self.background_color = cor_botao_laranja
	on_release: self.background_color = cor_botao
	Image:
		source: 'icones/' + self.parent.nome_imagem
		x: self.parent.center_x - 32
		y: self.parent.center_y - 32
		size_hint: None, None
		width: 64
		height: 64

<BotaoCancelarSalvar@Button>:
	background_down: ''
	background_normal: ''
	background_color: cor_botao
	font_size: 25
	on_press: self.background_color = cor_botao_azul
	on_release: self.background_color = cor_botao

<TelaInicial>:
	BoxLayout:
		padding: 15
		BoxLayout:
			orientation: 'vertical'
			canvas.before:
				Color:
					rgba: cor_borda
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: 5, 5, 5, 5
				Color:
					rgba: cor_fundo
				RoundedRectangle:
					size: self.size[0] - 12, self.size[1] - 12
					pos: self.pos[0] + 6, self.pos[1] + 6
					radius: 5, 5, 5, 5
			BoxLayout:
				Image:
					source: 'icones/arquivo_de_imagem.png'
					size_hint: 1, .4
			Label:
				id: mensagem
				color: cor_texto
				text: '[b]Arraste e solte o arquivo de log aqui[/b]'
				font_size: 22
				markup: True
				halign: 'center'
				valign: 'top'
				text_size: self.size
					
			ScrollView:
				GridLayout:
					orientation: 'vertical'
					id: area_resultado
					size_hint_y: None
					height: self.minimum_height	
					cols: 6
														



		


